@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "EditCategory";
}
<br />

<h2>Kategori Düzenleme</h2>
@using (Html.BeginForm("EditCategory", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("#")
        @Html.TextBoxFor(x => x.CategoryId,new { @readonly = "readonly" })
        <br /> 
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName)
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br /> <br />
        <button class="btn btn-success">Güncelle</button>
    </div>
}

